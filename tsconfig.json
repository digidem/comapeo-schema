{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2022"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowJs": false,
    "checkJs": false,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": false,
    "rootDirs": ["src", "generated"],
    "outDir": "intermediate"
  },
  "include": ["src/**/*.ts", "generated/**/*.ts"],
  "exclude": [
    "node_modules",
    "generated/proto/options.ts",
    "generated/proto/google/protobuf/descriptor.ts"
  ]
}
