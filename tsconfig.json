{
    "include": [
        "index.js"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "module": "es2022",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "removeComments": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "typeRoots": ["types"],
    },
    "exclude": ["scripts", "test", "types", "examples", "tmp", "lib"]
}
