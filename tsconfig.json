{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "es2022",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": false
  },
  "include": [
    "types/proto/*.ts",
    "types/schema/*.ts",
    "src/**/*.ts",
    "index.js"
  ],
  "exclude": ["node_modules"]
}
