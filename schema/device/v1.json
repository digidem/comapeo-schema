{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://mapeo.world/schemas/device/v1.json",
  "title": "Device",
  "type": "object",
  "properties": {
    "schemaType": {
      "type": "string",
      "enum": ["device"]
    },
    "action": {
      "type": "string",
      "enum": [
        "device:add",
        "device:remove",
        "device:restore"
      ]
    },
    "authorId": {
      "type": "string"
    },
    "projectId": {
      "type": "string"
    },
    "signature": {
      "type": "string"
    },
    "authorIndex": {
      "type": "integer"
    },
    "deviceIndex": {
      "type": "integer"
    }
  }
}
